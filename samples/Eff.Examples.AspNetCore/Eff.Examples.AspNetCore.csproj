<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <OutputType>Exe</OutputType>
    <Nullable>enable</Nullable>
    <NoWarn>CS1998;CS1591;$(NoWarn)</NoWarn>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <!-- Use NuGet build for easier debugging -->
    <UseNugetEff>false</UseNugetEff>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <PackageReference Include="Swashbuckle.AspNetCore" Version="5.0.0" />
    <PackageReference Include="MinVer" Version="2.3.0" PrivateAssets="All" />
  </ItemGroup>

  <Choose>
    <When Condition="'$(UseNugetEff)' == 'True'">
      <ItemGroup>
        <PackageReference Include="Eff" Version="*-*" />
        <PackageReference Include="Eff.Effects" Version="*-*" />
      </ItemGroup>      
    </When>
    <Otherwise>
      <ItemGroup>
        <ProjectReference Include="..\..\src\Eff\Eff.csproj" />
        <ProjectReference Include="..\..\src\Eff.Effects\Eff.Effects.csproj" />
      </ItemGroup>
    </Otherwise>
  </Choose>

  <ItemGroup>
    <Folder Include="Properties\" />
  </ItemGroup>

</Project>
